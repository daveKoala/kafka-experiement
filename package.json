{
  "name": "kafka-node-pipeline",
  "version": "1.0.0",
  "description": "TypeScript Node.js Kafka producer and consumer pipeline",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start:consumer": "node dist/consumer.js",
    "start:producer": "node dist/server.js",
    "start": "concurrently \"npm run start:producer\" \"npm run start:consumer\"",
    "dev:producer": "nodemon --watch src --ignore src/consumer.ts --ignore \"src/consumer copy.ts\" --ext ts,js,json --exec tsx src/server.ts",
    "dev:consumer": "nodemon --watch src/consumer.ts --watch src/config --watch src/utils/kafka --watch src/types.ts --ext ts,js,json --exec tsx src/consumer.ts",
    "dev": "concurrently --names \"CONSUMER,PRODUCER\" --prefix-colors \"blue,green\" \"npm run dev:consumer\" \"npm run dev:producer\"",
    "clean": "rm -rf dist",
    "prestart": "npm run build",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "kafkajs": "^2.2.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "keywords": [
    "kafka",
    "nodejs",
    "typescript",
    "streaming",
    "docker",
    "kraft"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  }
}
